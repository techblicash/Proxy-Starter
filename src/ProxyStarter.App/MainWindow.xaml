<ui:FluentWindow x:Class="ProxyStarter.App.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:views="clr-namespace:ProxyStarter.App.Views"
                 mc:Ignorable="d"
                 Title="{DynamicResource Text_AppName}"
                 Width="1200"
                 Height="760"
                 MinWidth="980"
                 MinHeight="620"
                 WindowBackdropType="Acrylic"
                 WindowCornerPreference="Round"
                 ExtendsContentIntoTitleBar="True"
                 Background="Transparent"
                 UseLayoutRounding="True"
                 SnapsToDevicePixels="True"
                 FontFamily="Segoe UI Variable">
    <ui:FluentWindow.Resources>
        <Style x:Key="WindowButtonStyle"
               TargetType="{x:Type ui:TitleBarButton}"
               BasedOn="{StaticResource {x:Type ui:TitleBarButton}}">
            <Setter Property="Width" Value="46" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="ButtonsForeground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
            <Setter Property="MouseOverButtonsForeground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
            <Setter Property="RenderButtonsForeground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ControlFillColorTertiaryBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WindowCloseButtonStyle"
               TargetType="{x:Type ui:TitleBarButton}"
               BasedOn="{StaticResource {x:Type ui:TitleBarButton}}">
            <Setter Property="Width" Value="46" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="ButtonsForeground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
            <Setter Property="MouseOverButtonsForeground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
            <Setter Property="RenderButtonsForeground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C42B1C" />
                    <Setter Property="ButtonsForeground" Value="White" />
                    <Setter Property="MouseOverButtonsForeground" Value="White" />
                    <Setter Property="RenderButtonsForeground" Value="White" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#8E1F14" />
                    <Setter Property="ButtonsForeground" Value="White" />
                    <Setter Property="MouseOverButtonsForeground" Value="White" />
                    <Setter Property="RenderButtonsForeground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </ui:FluentWindow.Resources>
    <Grid>
        <DockPanel LastChildFill="True">
            <Border x:Name="PaneBackdrop"
                    DockPanel.Dock="Left"
                    Background="{DynamicResource PaneAcrylicTintBrush}"
                    BorderBrush="{DynamicResource DividerStrokeColorDefaultBrush}"
                    BorderThickness="0,0,1,0"
                    IsHitTestVisible="False"
                    SnapsToDevicePixels="True">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Width" Value="240" />
                    </Style>
                </Border.Style>
            </Border>

            <Border x:Name="ContentBackdrop"
                    Background="{DynamicResource ContentAcrylicTintBrush}"
                    IsHitTestVisible="False"
                    SnapsToDevicePixels="True" />
        </DockPanel>

        <ui:NavigationView x:Name="RootNavigation"
                           Background="Transparent"
                           PaneDisplayMode="Left"
                           IsPaneOpen="True"
                           IsPaneToggleVisible="True"
                           PaneTitle="{DynamicResource Text_AppName}"
                           OpenPaneLength="240"
                           CompactPaneLength="48"
                           FrameMargin="16,32,16,16">
            <ui:NavigationView.Resources>
                <!-- Keep NavigationView surfaces transparent so our acrylic backdrops remain visible after theme reloads. -->
                <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent" />
                <SolidColorBrush x:Key="NavigationViewContentGridBorderBrush" Color="Transparent" />
                <SolidColorBrush x:Key="MenuBarBackground" Color="Transparent" />
                <SolidColorBrush x:Key="WindowBackground" Color="Transparent" />
            </ui:NavigationView.Resources>
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem x:Name="NavDashboard"
                                       Content="{DynamicResource Text_Dashboard}"
                                       Icon="{ui:SymbolIcon Home24}"
                                       TargetPageType="{x:Type views:DashboardPage}" />
                <ui:NavigationViewItem x:Name="NavProfiles"
                                       Content="{DynamicResource Text_Profiles}"
                                       Icon="{ui:SymbolIcon Document24}"
                                       TargetPageType="{x:Type views:ProfilesPage}" />
                <ui:NavigationViewItem x:Name="NavNodes"
                                       Content="{DynamicResource Text_Nodes}"
                                       Icon="{ui:SymbolIcon PlugConnected24}"
                                       TargetPageType="{x:Type views:NodesPage}" />
                <ui:NavigationViewItem x:Name="NavRules"
                                       Content="{DynamicResource Text_Rules}"
                                       Icon="{ui:SymbolIcon ShieldCheckmark24}"
                                       TargetPageType="{x:Type views:RulesPage}" />
                <ui:NavigationViewItem x:Name="NavConnections"
                                       Content="{DynamicResource Text_Connections}"
                                       Icon="{ui:SymbolIcon PlugConnected24}"
                                       TargetPageType="{x:Type views:ConnectionsPage}" />
                <ui:NavigationViewItem x:Name="NavLogs"
                                       Content="{DynamicResource Text_Logs}"
                                       Icon="{ui:SymbolIcon DocumentText24}"
                                       TargetPageType="{x:Type views:LogsPage}" />
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem x:Name="NavSettings"
                                       Content="{DynamicResource Text_Settings}"
                                       Icon="{ui:SymbolIcon Settings24}"
                                       TargetPageType="{x:Type views:SettingsPage}" />
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>

        <!-- Floating window buttons (no dedicated title bar row). -->
        <StackPanel x:Name="WindowButtons"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,0,8,0"
                    Panel.ZIndex="100">
            <ui:TitleBarButton x:Name="MinimizeButton"
                               ButtonType="Minimize"
                               Style="{StaticResource WindowButtonStyle}"
                               Click="OnMinimizeButtonClicked" />
            <ui:TitleBarButton x:Name="MaximizeButton"
                               ButtonType="Maximize"
                               Style="{StaticResource WindowButtonStyle}"
                               Click="OnMaximizeButtonClicked" />
            <ui:TitleBarButton x:Name="CloseButton"
                               ButtonType="Close"
                               Style="{StaticResource WindowCloseButtonStyle}"
                               Click="OnCloseButtonClicked" />
        </StackPanel>
    </Grid>
</ui:FluentWindow>
