<Page x:Class="ProxyStarter.App.Views.RulesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            <TextBlock Text="{DynamicResource Text_Rules}"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Margin="0,0,0,16" />

            <ui:Card Padding="16" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Text_RoutingMode}" FontSize="16" FontWeight="SemiBold" />
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <ComboBox ItemsSource="{Binding AvailableModes}"
                                  SelectedItem="{Binding SelectedMode}"
                                  Width="160"
                                  Style="{StaticResource CrispComboBoxStyle}"
                                  Margin="0,0,12,0" />
                        <ui:Button Content="{DynamicResource Text_Save}" Command="{Binding SaveModeCommand}" />
                    </StackPanel>
                </StackPanel>
            </ui:Card>

            <ui:Card Padding="16">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Text_Rules}" FontSize="16" FontWeight="SemiBold" />
                    <TextBlock Text="{DynamicResource Text_RulesHint}"
                               Margin="0,8,0,0"
                               Opacity="0.7"
                               TextWrapping="Wrap" />
                    <TextBox Text="{Binding RulesText}"
                             AcceptsReturn="True"
                             TextWrapping="NoWrap"
                             MinHeight="240"
                             Margin="0,12,0,0"
                             FontFamily="Cascadia Mono"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto" />
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <ui:Button Content="{DynamicResource Text_SaveRules}" Command="{Binding SaveRulesCommand}" Margin="0,0,8,0" />
                        <ui:Button Content="{DynamicResource Text_Reload}" Command="{Binding ReloadRulesCommand}" />
                    </StackPanel>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </ScrollViewer>
</Page>
